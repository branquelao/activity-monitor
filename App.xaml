<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="ActivityMonitor.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ActivityMonitor.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="ms-appx:///Themes/Colors.xaml"/>
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            
            <!-- Normal Button Style -->
            <Style x:Key="HeaderButtonInactive"
                   TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground"
                        Value="{ThemeResource HeaderButtonForeground}"/>
                <Setter Property="BorderBrush"
                        Value="{ThemeResource HeaderButtonBorder}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="12,6"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>

            <!-- Active Button Style -->
            <Style x:Key="HeaderButtonActive"
                   TargetType="Button"
                   BasedOn="{StaticResource HeaderButtonInactive}">
                <Setter Property="Background"
                        Value="{ThemeResource HeaderButtonActiveBackground}"/>
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="Foreground"
                        Value="{ThemeResource AppForegroundBrush}" />
            </Style>

            <!-- Converter -->
            <local:ButtonConverter
            x:Key="HeaderButtonStyleConverter"
            ActiveStyle="{StaticResource HeaderButtonActive}"
            InactiveStyle="{StaticResource HeaderButtonInactive}" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
