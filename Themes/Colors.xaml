<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>

        <!-- Light Theme -->
        <ResourceDictionary x:Key="Light">
            <Color x:Key="AppBackgroundColor">#FFFFFF</Color>
            <Color x:Key="AppForegroundColor">#1F1F1F</Color>

            <Color x:Key="HeaderButtonForegroundColor">#1F1F1F</Color>
            <Color x:Key="HeaderButtonBorderColor">#C7C7C7</Color>
            <Color x:Key="HeaderButtonActiveBackgroundColor">#E5E5E5</Color>

            <Color x:Key="UsedColor">#C42B1C</Color>
            <Color x:Key="FreeColor">#0F7B0F</Color>
        </ResourceDictionary>

        <!-- Dark Theme -->
        <ResourceDictionary x:Key="Dark">
            <Color x:Key="AppBackgroundColor">#000000</Color>
            <Color x:Key="AppForegroundColor">#FFFFFF</Color>

            <Color x:Key="HeaderButtonForegroundColor">#FFFFFF</Color>
            <Color x:Key="HeaderButtonBorderColor">#6F6F6F</Color>
            <Color x:Key="HeaderButtonActiveBackgroundColor">#3A3A3A</Color>

            <Color x:Key="UsedColor">#FF6A5E</Color>
            <Color x:Key="FreeColor">#5EDB8C</Color>
        </ResourceDictionary>

    </ResourceDictionary.ThemeDictionaries>

    <!-- Brushes compartilhados -->
    <SolidColorBrush x:Key="HeaderButtonForeground"
                     Color="{ThemeResource HeaderButtonForegroundColor}"/>

    <SolidColorBrush x:Key="HeaderButtonBorder"
                     Color="{ThemeResource HeaderButtonBorderColor}"/>

    <SolidColorBrush x:Key="HeaderButtonActiveBackground"
                     Color="{ThemeResource HeaderButtonActiveBackgroundColor}"/>

    <SolidColorBrush x:Key="UsedBrush"
                     Color="{ThemeResource UsedColor}"/>

    <SolidColorBrush x:Key="FreeBrush"
                     Color="{ThemeResource FreeColor}"/>

</ResourceDictionary>
