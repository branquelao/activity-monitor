<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>

        <!-- Light -->
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="AppForegroundBrush" Color="#1F1F1F"/>
            <SolidColorBrush x:Key="HeaderButtonForeground" Color="#1F1F1F"/>
            <SolidColorBrush x:Key="HeaderButtonBorder" Color="#C7C7C7"/>
            <SolidColorBrush x:Key="HeaderButtonActiveBackground" Color="#E5E5E5"/>
            <SolidColorBrush x:Key="UsedBrush" Color="#C42B1C"/>
            <SolidColorBrush x:Key="FreeBrush" Color="#0F7B0F"/>
        </ResourceDictionary>

        <!-- Dark -->
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#000000"/>
            <SolidColorBrush x:Key="AppForegroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="HeaderButtonForeground" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="HeaderButtonBorder" Color="#6F6F6F"/>
            <SolidColorBrush x:Key="HeaderButtonActiveBackground" Color="#3A3A3A"/>
            <SolidColorBrush x:Key="UsedBrush" Color="#FF6A5E"/>
            <SolidColorBrush x:Key="FreeBrush" Color="#5EDB8C"/>
        </ResourceDictionary>

    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
