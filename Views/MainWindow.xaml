<Window
    x:Class="ActivityMonitor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    Title="Activity Monitor">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Padding="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        Spacing="8">
                <Button x:Name="CpuButton"
                        Style="{StaticResource HeaderButtonActive}"                  
                        Content="CPU"
                        Click="OnCpuClicked"/>
                <Button x:Name="MemoryButton"
                        Style="{StaticResource HeaderButtonInactive}"
                        Content="Memory"
                        Click="OnMemoryClicked"/>
            </StackPanel>
        </Grid>

        <controls:DataGrid x:Name="ProcessGrid"
                           Grid.Row="1"
                           AutoGenerateColumns="False"
                           IsReadOnly="True"
                           HeadersVisibility="Column">

            <controls:DataGrid.Columns>

                <controls:DataGridTextColumn
                    x:Name="ProcessColumn"
                    Header="Process"
                    Binding="{Binding Name}"
                    Width="*"/>

                <controls:DataGridTextColumn
                    x:Name="CpuColumn"
                    Header="CPU (%)"
                    Binding="{Binding Cpu}"
                    Width="120"/>

                <controls:DataGridTextColumn
                    x:Name="MemoryColumn"
                    Header="Memory (MB)"
                    Binding="{Binding Memory}"
                    Width="150"/>
            </controls:DataGrid.Columns>
        </controls:DataGrid>

    </Grid>
</Window>
