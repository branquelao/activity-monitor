<Window
    x:Class="ActivityMonitor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ActivityMonitor.ViewModels"
    xmlns:models="using:ActivityMonitor.Models"
    mc:Ignorable="d"
    Title="Activity Monitor">

    <Grid RowDefinitions="Auto,*" Background="#F5F5F7">

        <!-- ðŸ”¹ Top summary bar (CPU / RAM) -->
        <Border
            Background="White"
            Padding="16"
            CornerRadius="8"
            Margin="16"
            Grid.Row="0">

            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>

            <Grid ColumnDefinitions="*,*">
                <!-- CPU -->
                <StackPanel>
                    <TextBlock
                        Text="CPU"
                        FontSize="14"
                        Foreground="Gray" />

                    <TextBlock
                        Text="{x:Bind ViewModel.Cpu.Text, Mode=OneWay}"
                        FontSize="20"
                        FontWeight="SemiBold" />
                </StackPanel>

                <!-- RAM -->
                <StackPanel Grid.Column="1">
                    <TextBlock
                        Text="RAM"
                        FontSize="14"
                        Foreground="Gray" />

                    <TextBlock
                        Text="{x:Bind ViewModel.Memory.Text, Mode=OneWay}"
                        FontSize="20"
                        FontWeight="SemiBold" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Process list -->
        <Border
            Grid.Row="1"
            Margin="16,0,16,16"
            Background="White"
            CornerRadius="8"
            Padding="8">

            <ListView
                ItemsSource="{x:Bind ViewModel.Processes, Mode=OneWay}"
                SelectionMode="None">

                <ListView.Header>
                    <Grid ColumnDefinitions="3*,2*,2*">
                        <TextBlock Text="Process" FontWeight="SemiBold"/>
                        <TextBlock Text="CPU %" Grid.Column="1" />
                        <TextBlock Text="RAM (MB)" Grid.Column="2" />
                    </Grid>
                </ListView.Header>

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:ProcessInfo">
                        <Grid ColumnDefinitions="3*,2*,2*" Padding="4">
                            <TextBlock Text="{x:Bind Name}" />
                            <TextBlock Text="{x:Bind CpuUsage, Mode=OneWay}" Grid.Column="1"/>
                            <TextBlock Text="{x:Bind MemoryUsage, Mode=OneWay}" Grid.Column="2"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </Border>

    </Grid>
</Window>
